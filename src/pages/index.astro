	<section class="text-center my-12" aria-label="social links">
		<div class="w-1/2 mx-auto md:mx-0 flex gap-4 text-xl">
			{socialLinks.map(link => (
				<a href={link.href} aria-label={link.name}>
					<i title={link.name} class={link.classes}></i>

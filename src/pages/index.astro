	<!-- WORK I'M PROUD OF  -->

	<!-- TESTIMONIALS -->
	<section class="my-20
	" aria-label="testimonials">
		<h2 class="text-2xl mb-2 font-semibold">Testimonials</h2>
		<div class="grid md:grid-cols-2 gap-6">
			{testimonials.map(({name, quote, project }) => (
				<blockquote class="  prose p-4 border-l-4 bg-gray-900  rounded shadow-xl">
						<p class="prose  text-gray-400">{quote}</p>
						<cite class=" text-gray-300"> ~ {name}
						<a target="_blank" class="block text-sm ml-4 text-gray-500 hover:text-sky-500" href={project.link}>{project.title}</a>	
						</cite>
					</blockquote>
				))}
		</div>
	</section>
